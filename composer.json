{
    "name": "contao/monorepo-tools",
    "description": "Contao Monorepo Tools",
    "license": "LGPL-3.0-or-later",
    "type": "library",
    "authors": [
        {
            "name": "Martin AuswÃ¶ger",
            "homepage": "https://au.si/"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "ext-json": "*",
        "ext-zlib": "*",
        "composer/semver": "^3.2",
        "phpspec/php-diff": "^1.0",
        "symfony/config": ">=3.4",
        "symfony/console": ">=3.4",
        "symfony/filesystem": ">=3.4",
        "symfony/process": ">=3.4",
        "symfony/yaml": ">=3.4"
    },
    "require-dev": {
        "contao/code-quality": "^1.0",
        "phpstan/phpstan": "^1.0",
        "phpstan/phpstan-symfony": "^1.0",
        "phpunit/phpunit": "^9.5"
    },
    "conflict": {
        "composer/semver": "3.2.8"
    },
    "autoload": {
        "psr-4": {
            "Contao\\MonorepoTools\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Contao\\MonorepoTools\\Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/monorepo-tools"
    ],
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "all": [
            "@ecs",
            "@unit-tests",
            "@phpstan"
        ],
        "ecs": "@php vendor/bin/ecs check --fix --ansi",
        "phpstan": "@php vendor/bin/phpstan analyze  --ansi",
        "unit-tests": "@php vendor/bin/phpunit --colors=always"
    }
}
